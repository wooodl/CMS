<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 综合管理系统</title>
    <link rel="stylesheet" href="~/lib/layui/css/layui.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .layui-layout-admin .layui-header {
            background-color: #393D49;
        }
        .layui-layout-admin .layui-side {
            top: 60px;
        }
        .layui-layout-admin .layui-body {
            top: 60px;
            left: 200px;
        }
        .layui-logo {
            color: #fff;
            font-weight: bold;
            font-size: 18px;
        }
        .content-wrapper {
            padding: 15px;
        }
    </style>
</head>
<body>
    <div class="layui-layout layui-layout-admin">
        <!-- 头部 -->
        <div class="layui-header">
            <div class="layui-logo layui-hide-xs layui-bg-black">综合管理系统</div>
            
            <!-- 头部区域（可配合layui 已有的水平导航） -->
            <ul class="layui-nav layui-layout-left">
                <!-- 移动端显示 -->
                <li class="layui-nav-item layui-show-xs-inline-block layui-hide-sm" lay-header-event="menuLeft">
                    <i class="layui-icon layui-icon-spread-left"></i>
                </li>
            </ul>
            
            <ul class="layui-nav layui-layout-right">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <li class="layui-nav-item layui-hide layui-show-md-inline-block">
                        <a href="javascript:;">
                            <img src="//tva1.sinaimg.cn/crop.0.0.118.118.180/5db11ff4gw1e77d3nqrv8j203b03cweg.jpg" class="layui-nav-img">
                            @User.Identity?.Name
                        </a>
                        <dl class="layui-nav-child">
                            <dd><a href="#">个人资料</a></dd>
                            <dd><a href="#">修改密码</a></dd>
                        </dl>
                    </li>
                    <li class="layui-nav-item">
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="layui-btn layui-btn-primary layui-btn-sm">退出</button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="layui-nav-item">
                        <a asp-controller="Account" asp-action="Login" class="layui-btn layui-btn-primary layui-btn-sm">登录</a>
                    </li>
                    <li class="layui-nav-item">
                        <a asp-controller="Account" asp-action="Register" class="layui-btn layui-btn-normal layui-btn-sm">注册</a>
                    </li>
                }
            </ul>
        </div>
        
        <!-- 左侧导航 -->
        <div class="layui-side layui-bg-black">
            <div class="layui-side-scroll">
                <ul class="layui-nav layui-nav-tree" lay-filter="test">
                    <li class="layui-nav-item">
                        <a asp-controller="Home" asp-action="Index">
                            <i class="layui-icon layui-icon-home"></i>
                            首页
                        </a>
                    </li>
                    
                    <li class="layui-nav-item layui-nav-itemed">
                        <a class="" href="javascript:;">
                            <i class="layui-icon layui-icon-user"></i>
                            人员管理
                        </a>
                        <dl class="layui-nav-child">
                            <dd><a asp-controller="PersonnelBasicInfo" asp-action="Index">人员信息</a></dd>
                            <dd><a asp-controller="Personnel" asp-action="Index">简化人员</a></dd>
                            <dd><a asp-controller="Department" asp-action="Index">部门管理</a></dd>
                        </dl>
                    </li>
                    
                    <li class="layui-nav-item">
                        <a href="javascript:;">
                            <i class="layui-icon layui-icon-util"></i>
                            飞机管理
                        </a>
                        <dl class="layui-nav-child">
                            <dd><a href="">飞机信息</a></dd>
                            <dd><a href="">维护记录</a></dd>
                        </dl>
                    </li>
                    
                    <li class="layui-nav-item">
                        <a href="javascript:;">
                            <i class="layui-icon layui-icon-component"></i>
                            装备管理
                        </a>
                        <dl class="layui-nav-child">
                            <dd><a href="">装备信息</a></dd>
                            <dd><a href="">维护记录</a></dd>
                        </dl>
                    </li>
                    
                    <li class="layui-nav-item">
                        <a href="javascript:;">
                            <i class="layui-icon layui-icon-engine"></i>
                            设备管理
                        </a>
                        <dl class="layui-nav-child">
                            <dd><a href="">设备信息</a></dd>
                            <dd><a href="">维护记录</a></dd>
                        </dl>
                    </li>
                    
                    <li class="layui-nav-item">
                        <a href="javascript:;">
                            <i class="layui-icon layui-icon-goods"></i>
                            装具管理
                        </a>
                        <dl class="layui-nav-child">
                            <dd><a href="">装具信息</a></dd>
                            <dd><a href="">检查记录</a></dd>
                        </dl>
                    </li>
                    
                    <li class="layui-nav-item">
                        <a href="javascript:;">
                            <i class="layui-icon layui-icon-list"></i>
                            库存管理
                        </a>
                        <dl class="layui-nav-child">
                            <dd><a href="">入库管理</a></dd>
                            <dd><a href="">出库管理</a></dd>
                            <dd><a href="">移库管理</a></dd>
                            <dd><a href="">现有库存</a></dd>
                            <dd><a href="">库存盘点</a></dd>
                        </dl>
                    </li>
                    
                    <li class="layui-nav-item">
                        <a href="javascript:;">
                            <i class="layui-icon layui-icon-chart"></i>
                            统计报表
                        </a>
                        <dl class="layui-nav-child">
                            <dd><a href="">库存统计</a></dd>
                            <dd><a href="">使用统计</a></dd>
                            <dd><a href="">维护统计</a></dd>
                        </dl>
                    </li>
                    
                    <li class="layui-nav-item">
                        <a href="javascript:;">
                            <i class="layui-icon layui-icon-set"></i>
                            系统管理
                        </a>
                        <dl class="layui-nav-child">
                            <dd><a href="">用户管理</a></dd>
                            <dd><a href="">角色管理</a></dd>
                            <dd><a href="">库房管理</a></dd>
                            <dd><a href="">厂家管理</a></dd>
                            <dd><a href="">计量单位</a></dd>
                            <dd><a href="">类别设置</a></dd>
                        </dl>
                    </li>
                </ul>
            </div>
        </div>
        
        <!-- 内容主体 -->
        <div class="layui-body">
            <div class="content-wrapper">
                @RenderBody()
            </div>
        </div>
        
        <!-- 底部 -->
        <div class="layui-footer">
            © 2023 综合管理系统 - 版权所有
        </div>
    </div>

    <script src="~/lib/layui/layui.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
    <script>
        //JS 
        layui.use(['element', 'layer', 'util'], function(){
            var element = layui.element;
            var layer = layui.layer;
            var util = layui.util;
            
            //头部事件
            util.event('lay-header-event', {
                //左侧菜单事件
                menuLeft: function(othis){
                    layer.msg('展开左侧菜单的操作', {icon: 0});
                }
            });
        });
    </script>
</body>
</html>