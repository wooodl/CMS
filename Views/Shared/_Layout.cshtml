                        }, 100);
                    } else {
                        // 展开侧边栏
                        layout.removeClass('layui-layout-shrink');
                        icon.removeClass('layui-icon-shrink-right').addClass('layui-icon-spread-left');

                        // 保存展开状态到localStorage
                        localStorage.setItem('sidebar-shrink', 'false');

