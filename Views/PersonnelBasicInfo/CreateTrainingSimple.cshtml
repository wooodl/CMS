@model ComprehensiveManagementSystem.Models.PersonnelTraining

@{
    ViewData["Title"] = "测试培训记录添加";
}

<h2>简化版培训记录添加 - 测试用</h2>

<form asp-action="CreateTraining" method="post">
    <input type="hidden" asp-for="PersonnelId" />
    
    <div>
        <label>培训名称:</label>
        <input asp-for="TrainingName" type="text" required />
    </div>
    
    <div>
        <label>培训机构:</label>
        <input asp-for="TrainingOrganization" type="text" required />
    </div>
    
    <div>
        <label>培训地点:</label>
        <input asp-for="TrainingLocation" type="text" required />
    </div>
    
    <div>
        <label>开始时间:</label>
        <input asp-for="StartDate" type="date" required />
    </div>
    
    <div>
        <label>结束时间:</label>
        <input asp-for="EndDate" type="date" required />
    </div>
    
    <div>
        <label>培训天数:</label>
        <input asp-for="TrainingDays" type="number" value="1" />
    </div>
    
    <div>
        <button type="submit">保存</button>
        <button type="button" onclick="location.href='@Url.Action("Details", new { id = Model.PersonnelId, tab = 4 })'">返回</button>
    </div>
</form>

<script>
    console.log('简化测试页面已加载');
</script>