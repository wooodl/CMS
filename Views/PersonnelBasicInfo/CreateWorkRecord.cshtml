@model ComprehensiveManagementSystem.Models.PersonnelWorkRecord

@{
    ViewData["Title"] = "添加工作记录";
}

<div class="layui-row">
    <div class="layui-col-md12">
        <div class="layui-card">
            <div class="layui-card-header">
                <h3>添加工作记录 - @ViewData["PersonnelName"]</h3>
            </div>
            <div class="layui-card-body">
                <form asp-action="CreateWorkRecord" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <input type="hidden" asp-for="PersonnelId" />
                    
                    <div class="layui-row layui-col-space20">
                        <div class="layui-col-md6">
                            <div class="layui-form-item">
                                <label class="layui-form-label">工作时间 <span style="color: red;">*</span></label>
                                <div class="layui-input-block">
                                    <input asp-for="WorkDate" type="date" class="layui-input" />
                                    <span asp-validation-for="WorkDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="layui-col-md6">
                            <div class="layui-form-item">
                                <label class="layui-form-label">工作地点 <span style="color: red;">*</span></label>
                                <div class="layui-input-block">
                                    <input asp-for="WorkPlace" class="layui-input" placeholder="请输入工作地点" />
                                    <span asp-validation-for="WorkPlace" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="layui-row layui-col-space20">
                        <div class="layui-col-md6">
                            <div class="layui-form-item">
                                <label class="layui-form-label">工作性质/类型</label>
                                <div class="layui-input-block">
                                    <input asp-for="WorkType" class="layui-input" placeholder="请输入工作性质或类型" />
                                    <span asp-validation-for="WorkType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="layui-col-md6">
                            <div class="layui-form-item">
                                <label class="layui-form-label">参与人员</label>
                                <div class="layui-input-block">
                                    <input asp-for="Participants" class="layui-input" placeholder="请输入参与人员" />
                                    <span asp-validation-for="Participants" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="layui-form-item">
                        <label class="layui-form-label">工作内容 <span style="color: red;">*</span></label>
                        <div class="layui-input-block">
                            <textarea asp-for="WorkContent" class="layui-textarea" placeholder="请输入工作内容"></textarea>
                            <span asp-validation-for="WorkContent" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="layui-form-item">
                        <label class="layui-form-label">工作成果</label>
                        <div class="layui-input-block">
                            <textarea asp-for="WorkResult" class="layui-textarea" placeholder="请输入工作成果"></textarea>
                            <span asp-validation-for="WorkResult" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="layui-form-item">
                        <label class="layui-form-label">备注</label>
                        <div class="layui-input-block">
                            <textarea asp-for="Remark" class="layui-textarea" placeholder="请输入备注信息"></textarea>
                            <span asp-validation-for="Remark" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="layui-form-item">
                        <div class="layui-input-block">
                            <button type="submit" class="layui-btn layui-btn-normal">
                                <i class="layui-icon layui-icon-ok"></i> 保存
                            </button>
                            <a href="@Url.Action("Details", new { id = Model.PersonnelId, tab = 7 })" class="layui-btn layui-btn-primary">
                                <i class="layui-icon layui-icon-return"></i> 返回详情
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('工作记录添加页面已加载');
            
            var form = document.querySelector('form');
            if (form) {
                form.addEventListener('submit', function(e) {
                    console.log('工作记录表单提交事件被触发');
                    return true;
                });
            }
        });
    </script>
}

@section ValidationScripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}